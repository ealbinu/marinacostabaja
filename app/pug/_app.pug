mixin modal(theid, titulo)
  .modal.fade(role="dialog" id=theid)
    .modal-dialog.modal-lg(role="document")
      .modal-content
        .modal-header
          h2=titulo
          button(type="button" data-dismiss="modal").close: span &times;
        .modal-body
          if block
            block



