mixin inputText(lb, typevar, pholder)
  - if (pholder==null)
    - pholder = lb
  .form-group.row
    label.col-form-label.col-5.text-right !{lb}
    input.form-control.col-7(type=typevar, placeholder=pholder)
    
mixin inputOptions(lb, ...items)
  - var nmb = Math.floor(Math.random() * 100);
  .form-group.row
    label.col-form-label.col-5.text-right
      div !{lb}
      
    .col-7
      each item in items
        .form-check.form-check-inline: label
          input.form-check-input(type="radio" name="eval"+nmb)
          span=item

mixin inputCheckboxes(lb, ...items)
  - var nmb = Math.floor(Math.random() * 100);
  .form-group.row
    label.col-form-label.col-5.text-right
      div !{lb}
      
    .col-7
      each item in items
        .form-check.form-check-inline: label
          input.form-check-input(type="checkbox" name="eval"+item)
          span=item

mixin inputSelect(lb, ...items)
  - var nmb = Math.floor(Math.random() * 100);
  .form-group.row
    label.col-form-label.col-5.text-right
      div !{lb}
    
    select.form-control.col-7
      each item in items
        option=item

mixin catalogo(txt, img)
  .card
    img(src=img).card-img-top
    .card-body
      h4.card-title=txt
      .card-text: p Consectetur adipiscing elit, sed do eiusmod tempor incididunt.
      .text-right: a(href="#").btn.btn-secondary Canjear
      
      
mixin navi(inside)
    .container
      a.navbar-brand(href="index.html").smooth-scroll: img(src="app/img/costabaja.png")
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#mainNav")
        span.fa.fa-bars
      .collapse.navbar-collapse#mainNav.justify-content-end
        ul.navbar-nav
          each sec in secciones
              li.nav-item: a(href=slugify(sec)+".html").nav-link=sec
          

mixin navitems(inside)
  ul
    each sec in secciones
      li.nav-item: a(href=slugify(sec)+".html")=sec
    if(!inside)
      li.nav-item: a(href="#" data-toggle="modal" data-target="#loginForm").smooth-scroll Iniciar sesión
    if(inside)
      li.nav-item: a(href="index.html") Cerrar sesión
      li.nav-item.dropdown
        a(href="#" data-toggle="dropdown").nav-link Bienvenida #[strong Pruebas]
        .dropdown-menu.text-center
          p.dropdown-item Saldo en #[strong.main Puntos Más X Más] #[br] #[strong 2,010.00 puntos]
      li.nav-item.dropdown
        a(href="#" data-toggle="dropdown").nav-link: i.fa.fa-shopping-cart
        .dropdown-menu.text-center
          .dropdown-item Carrito de canje
          table.table
            tr
              td: strong Total
              td $0
          a(href="carrito.html").btn.btn-primary Ver carrito

