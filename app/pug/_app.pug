- var title = "Costabaja Resort, Marina & Spa"
- var description = title
- var url = "puntosgrainger.com"
- var secciones = ['RESORT', 'RESTAURANTES', 'EVENTOS', 'SPA', '¿QUÉ HACER EN LA PAZ?', 'PROMOCIONES', 'RENTA DE VILLAS', 'CONTACTO']

- function slugify(text){ return text.toString().toLowerCase().replace('é','e').replace('ó', 'o').replace('á','a').replace(/\s+/g, '-').replace(/[^\w\-]+/g, '').replace(/\-\-+/g, '-').replace(/^-+/, '').replace(/-+$/, ''); }

